{
    // Main Editor
    "workbench.activityBar.visible": true,
    "workbench.startupEditor": "welcomePage",
    "window.zoomLevel": 0,
    "workbench.sideBar.location": "right",
    "editor.renderWhitespace": "all",
    "editor.tabCompletion": "on",
    "workbench.colorTheme": "Hop Light",
    "editor.minimap.enabled": false,
    "todo-tree.tree.showScanModeButton": false,
    "explorer.openEditors.visible": 0,
    // "keyboard.dispatch": "keyCode", 

    // Font Settings and Typing
    "editor.fontFamily": "Fira Code",
    "editor.fontWeight": "900",
    "editor.fontLigatures": true,
    "editor.tabSize": 2,

    // Terminal Settings
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.rendererType": "dom",

    // Saving File Actions
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
  
    // Cursor And Mouse Operations
    "editor.cursorWidth": 3,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#DC143C",
        "terminalCursor.foreground": "#DC143C"
    },
    "editor.mouseWheelZoom": false,
    "editor.cursorBlinking": "expand",
    
    // Font-size
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 12,
  
    // Enable Tabs and Disable Preview
    "workbench.editor.showTabs": true,
    "workbench.editor.enablePreview": false,
  
    // Editor File Cover
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true
    },
  
    // Extension Configurations
    "liveServer.settings.https": {
        "enable": false,
        "cert": "",
        "key": "",
        "passphrase": ""
    },
    "eslint.autoFixOnSave": true,
    "liveshare.presence": false,
    "workbench.iconTheme": "material-icon-theme",
  
    // JavaScript Configurations
    "npm.enableScriptExplorer": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    }
  }